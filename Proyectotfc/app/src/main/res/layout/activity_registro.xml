<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margen"
    tools:context=".RegistroActivity">

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/sanfrancis"
        android:text="@string/tv_nombre"
        android:textSize="@dimen/tmTituloR"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sanfrancis"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre"
        android:hint="@string/et_hint_nombre"
        android:layout_marginTop="@dimen/margene"
        android:inputType="textPersonName|textCapWords"
        />
    <TextView
        android:id="@+id/tvApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sanfrancis"
        android:layout_marginTop="@dimen/margene"
        app:layout_constraintTop_toBottomOf="@+id/etNombre"
        android:text="@string/tv_apellido"
        android:textStyle="bold"
        android:textSize="@dimen/tmTituloR"
        />
    <EditText
        android:id="@+id/etApellido"
        android:layout_width="match_parent"
        android:fontFamily="@font/sanfrancis"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvApellido"
        android:hint="@string/et_hint_apellido"
        android:layout_marginTop="@dimen/margene"
        android:inputType="textPersonName|textCapWords"

        />
    <TextView
        android:id="@+id/tvCorreo"
        android:layout_width="match_parent"
        android:fontFamily="@font/sanfrancis"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margene"
        app:layout_constraintTop_toBottomOf="@+id/etApellido"
        android:text="@string/tv_correo"
        android:textStyle="bold"
        android:textSize="@dimen/tmTituloR"
        />
    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="match_parent"
        android:fontFamily="@font/sanfrancis"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvCorreo"
        android:hint="@string/et_hint_correo"
        android:layout_marginTop="@dimen/margene"
        android:inputType="textEmailAddress"
        />
    <TextView
        android:id="@+id/tvTelefono"
        android:layout_width="match_parent"
        android:fontFamily="@font/sanfrancis"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margene"
        app:layout_constraintTop_toBottomOf="@+id/etCorreo"
        android:text="@string/tv_telefono"
        android:textStyle="bold"
        android:textSize="@dimen/tmTituloR"
        />
    <EditText
        android:id="@+id/etTelefono"
        android:layout_width="match_parent"
        android:fontFamily="@font/sanfrancis"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTelefono"
        android:hint="@string/et_hint_telefono"
        android:layout_marginTop="@dimen/margene"
        android:inputType="phone"
        />
    <TextView
        android:id="@+id/tvContrase単aR"
        android:layout_width="match_parent"
        android:fontFamily="@font/sanfrancis"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margene"
        app:layout_constraintTop_toBottomOf="@+id/etTelefono"
        android:text="@string/tv_Contrase単aR"
        android:textStyle="bold"
        android:textSize="@dimen/tmTituloR"
        />
    <EditText
        android:id="@+id/etContrasenaR"
        android:layout_width="match_parent"
        android:fontFamily="@font/sanfrancis"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvContrase単aR"
        android:hint="@string/et_hint_contrase単a"
        android:layout_marginTop="@dimen/margene"
        />
    <TextView
        android:id="@+id/tvCuentaR"
        android:layout_width="match_parent"
        android:fontFamily="@font/sanfrancis"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        app:layout_constraintTop_toBottomOf="@+id/etContrasenaR"
        android:text="@string/tv_tienes_cuenta"
        android:textSize="@dimen/registro"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        android:transitionName="NewUserTrans"
        />
    <LinearLayout
        android:id="@+id/llBtns"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvCuentaR"
        android:layout_marginTop="@dimen/margene"
        >
        <Button
            android:id="@+id/btnGuardarR"
            android:layout_width="match_parent"
            android:fontFamily="@font/sanfrancis"
            android:layout_height="wrap_content"
            android:text="@string/btn_guardarR"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btnCancelarR"
            android:layout_width="match_parent"
            android:fontFamily="@font/sanfrancis"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancelar"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margen"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>