<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosJuegoActivity"
    android:padding="@dimen/margen">

    <TextView
        android:id="@+id/tvNombreJuegoDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textSize="@dimen/tmTitulo"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <ImageView
        android:layout_marginTop="@dimen/margen"
        android:id="@+id/ivPortadaJuegoDetalle"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNombreJuegoDetalle"/>

    <TextView
        android:id="@+id/tvGeneroJuegoDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivPortadaJuegoDetalle"
        android:layout_marginTop="@dimen/margen"
        android:text="@string/tv_genero_juego_detalle"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvPlataformasJuegoDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvGeneroJuegoDetalle"
        android:layout_marginTop="@dimen/margen"
        android:text="@string/tv_plataformas_juego_detalle"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvDescripcionJuegoDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        app:layout_constraintTop_toBottomOf="@id/tvPlataformasJuegoDetalle"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnVolverDet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcionJuegoDetalle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/btn_volver"
        android:fontFamily="@font/sanfrancis"/>



</androidx.constraintlayout.widget.ConstraintLayout>