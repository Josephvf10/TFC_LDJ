<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BuscarPersonas.BuscarPersonasFragment"
    android:padding="@dimen/margen">


    <LinearLayout
        android:id="@+id/llBusquedaPersonas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margen"
        tools:ignore="MissingConstraints">



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBuscarPersonas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_desing"
            android:text="@string/btn_buscar_personas"
            android:layout_weight="3"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBuscarPersonas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        app:layout_constraintTop_toBottomOf="@id/llBusquedaPersonas"/>


</androidx.constraintlayout.widget.ConstraintLayout>