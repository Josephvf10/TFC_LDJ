<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.Juegos.DatosJuegoFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llJuegoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="100dp">

            <TextView
                android:id="@+id/tvNombreJuegoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/tmTitulo"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/righteous_normal"/>

            <ImageView
                android:id="@+id/ivPortadaJuegoDetalle"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/margen"/>
            <TextView
                android:id="@+id/tvGeneroJuegoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen"
                android:text="@string/tv_genero_juego_detalle"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/tam_txt_reg"
                android:fontFamily="@font/righteous_normal"/>

            <TextView
                android:id="@+id/tvPlataformasJuegoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen"
                android:text="@string/tv_plataformas_juego_detalle"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/tam_txt_reg"
                android:fontFamily="@font/righteous_normal"/>
            <TextView
                android:id="@+id/tvDescripcionJuegoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/tam_txt_reg"
                android:fontFamily="@font/righteous_normal"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabEstadoJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:contentDescription="@string/estado_del_juego"
                android:layout_margin="20dp" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>