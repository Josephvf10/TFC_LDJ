<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosPersonaActivity">

    <TextView
        android:id="@+id/tvNombreDU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        android:textSize="@dimen/top_txt_reg"
        android:textStyle="bold"
        android:fontFamily="@font/righteous_normal"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llEmailyTelfDU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvNombreDU"
        android:layout_marginTop="@dimen/margen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEmailDU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tam_txt_reg"
            android:text="@string/email_du"
            android:fontFamily="@font/righteous_normal"
            android:layout_weight="1"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvTelefDU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tam_txt_reg"
            android:text="@string/telef_du"
            android:fontFamily="@font/righteous_normal"
            android:layout_weight="1"
            android:textColor="@color/black"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSeguir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_desing"
        app:layout_constraintTop_toBottomOf="@id/llEmailyTelfDU"
        android:layout_marginTop="@dimen/margen"
        android:text="@string/btn_seguir"
        android:layout_weight="3"
        />

    <TextView
        android:id="@+id/tvCompletadosDU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        android:textSize="@dimen/tam_txt_reg"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/righteous_normal"
        app:layout_constraintTop_toBottomOf="@id/btnSeguir"
        android:text="@string/txt_tv_completados"
        android:textColor="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCompletadosDU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCompletadosDU"
        android:layout_marginTop="@dimen/margen"/>

    <TextView
        android:id="@+id/tvJugadosDU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        android:textSize="@dimen/tam_txt_reg"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/righteous_normal"
        android:text="@string/txt_tv_jugadoss"
        app:layout_constraintTop_toBottomOf="@id/rvCompletadosDU"
        android:textColor="@color/black"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvJugadossDU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        app:layout_constraintTop_toBottomOf="@id/tvJugadosDU"/>
    <TextView
        android:id="@+id/tvMediasDU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        android:textSize="@dimen/tam_txt_reg"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/righteous_normal"
        android:text="@string/txt_tv_medias"
        app:layout_constraintTop_toBottomOf="@id/rvJugadossDU"
        android:textColor="@color/black"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMediasDU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        app:layout_constraintTop_toBottomOf="@id/tvMediasDU"/>

    <TextView
        android:id="@+id/tvOlvidadoDU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        android:textSize="@dimen/tam_txt_reg"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/righteous_normal"
        android:text="@string/txt_tv_olivdado"
        app:layout_constraintTop_toBottomOf="@id/rvMediasDU"
        android:textColor="@color/black"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOlvidadoDU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen"
        app:layout_constraintTop_toBottomOf="@id/tvOlvidadoDU"/>

</androidx.constraintlayout.widget.ConstraintLayout>